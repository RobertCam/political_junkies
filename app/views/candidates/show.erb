<div class="container-fluid"> 
  <!-- top row: should have donations, name, image -->
  <div class="row top-row">
    <div class="col-sm-4">
      <h1 class="big_numbers">$<%= @cand_sum["total"] %></h1>
      <h4>Total Donations Received</h4><br>

      <h1 class="big_numbers">$<%= @cand_sum["spent"] %></h1>
      <h4>Total Spent</h4><br>
    </div>
    <div class="col-sm-4"><h1><%= @cand_sum["cand_name"] %></h1><br></div>
    <div class="col-sm-4"></div>
  </div>
  <!-- sponsors for sector, contributor and indsutry by name -->
  <div class="row sponsors-row">
    <div class="col-sm-4">
      <h4>By sector</h4>
      <% @cand_sec["sector"].each do |sec| %>
        <ul>
          <li><%= sec["sector_name"] %>
        </ul>
      <% end %>
    </div>
    <div class="col-sm-4">
      <h2>Sponsors</h2><br><br>
      <h4>By contributor</h4>
      <% @cand_con["contributor"].each do |con| %>
        <ul>
          <li><%= con["org_name"] %></li> 
        </ul>
      <% end %>
    </div>
    <div class="col-sm-4">
      <h4>By industry</h4>
      <% @cand_ind["industry"].each do |ind| %>
        <ul>
          <li><%= ind["industry_name"] %></li>
        </ul>
      <% end %>
    </div>
  </div>
  <!-- 3rd row with the breakdown of donations for each sector (following from the prior row) ; each column is broken down into nested sub-columns -->
  <div class="row breakdown-row">
    <div class="col-sm-4">
      <div class="row">
      <!-- <h3>Sector donations breakdown</h3> -->
        <div class="col-sm-4">
          <h1><%= @cand_sec_extract[0] %></h1>
          <h4>PAC donations received</h4>
        </div>
        <div class="col-sm-4">
          <h1><%= @cand_sec_extract[1] %></h1>
          <h4>Individual donations received</h4>
        </div>
        <div class="col-sm-4">
          <h1><%= @cand_sec_extract[2] %></h1>
          <h4>Total donations received</h4>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="row">
      <!-- <h3>Contributors donations breakdown</h3> -->
        <div class="col-sm-4">
          <h1><%= @cand_con_extract[0] %></h1>
          <h4>PAC donations received</h4>
        </div>
        <div class="col-sm-4">
          <h1><%= @cand_con_extract[1] %></h1>
          <h4>Individual donations received</h4>
        </div>
        <div class="col-sm-4">
          <h1><%= @cand_con_extract[2] %></h1>
          <h4>Total donations received</h4>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="row">
      <!-- <h3>Industry donations breakdown</h3> -->
        <div class="col-sm-4">
          <h1><%= @cand_ind_extract[0] %></h1>
          <h4>PAC donations received</h4>
        </div>
        <div class="col-sm-4">
          <h1><%= @cand_ind_extract[1] %></h1>
          <h4>Individual donations received</h4>
        </div>
        <div class="col-sm-4">
          <h1><%= @cand_ind_extract[2] %></h1>
          <h4>Total donations received</h4>
        </div>
      </div>
    </div>
  </div>
</div>




